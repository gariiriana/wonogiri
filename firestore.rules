rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules - auto-created on login
    match /users/{userId} {
      // Allow read if authenticated and user owns the document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow create/update if authenticated and userId matches auth user
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      
      // Deny delete
      allow delete: if false;
    }
    
    // Debtors collection rules
    match /debtors/{debtorId} {
      // Allow read if authenticated and user owns the debtor
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if authenticated and userId matches auth user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if authenticated and user owns the debtor
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow delete if authenticated and user owns the debtor
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Transactions collection rules
    match /transactions/{transactionId} {
      // Allow read if authenticated and user owns the transaction
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if authenticated and userId matches auth user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if authenticated and user owns the transaction
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow delete if authenticated and user owns the transaction
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
